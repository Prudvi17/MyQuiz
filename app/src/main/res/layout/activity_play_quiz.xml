<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:layout_height="match_parent"
    tools:context=".PlayQuizActivity">
    <TextView
        android:id="@+id/txtProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="Question 1 of 10"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/txtProgress"
        android:layout_marginTop="40dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtQuestion"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/txtOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_unclick"
                    android:padding="15sp"
                    android:text="@string/app_name"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/txtOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_unclick"
                    android:padding="15sp"
                    android:text="@string/app_name"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/txtOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_unclick"
                    android:padding="15sp"
                    android:text="@string/app_name"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/txtOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_unclick"
                    android:padding="15sp"
                    android:text="@string/app_name"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="NEXT"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/white"
        android:paddingVertical="10dp"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:textStyle="bold|italic" />


</RelativeLayout>